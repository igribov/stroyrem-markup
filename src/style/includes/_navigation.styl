.main-nav
  background-color redColor
  padding 0 80px
  margin-bottom 15px

.main_nav__list
  list-style none
  li
    display inline-block
    vertical-align top
    margin-right 30px
    &:last-child
      margin-right 0
  a
    color white
    display block
    width 100%
    height 100%
    padding 15px 0
    padding-bottom 0
    margin-bottom 14px
    font-family BebasBold
    text-transform uppercase
    font-size 1.6rem

.main-nav__list-item:hover, .main-nav__list-item--active
    a
      border-bottom 2px solid white
      margin-bottom 12px