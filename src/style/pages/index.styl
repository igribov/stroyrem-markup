@import "../main"
@import "../includes/_navigation"
@import "../includes/_feedback_form"

.top-advantages
    text-align center
    margin-bottom 20px
    border 2px solid redColor
    padding 25px 0

.top-advantages__item
    position relative
    display inline-block
    width 20%
    margin 0 2%
    left 0
    top 0
    &:before
        content ''
        position absolute
        display block
        sprite($s-expirience)
    span
        font-family bebasBold
        font-size 1.1rem

.top-advantages__item--experience
    &:before
      top -15px
      left 20px
      sprite($s-expirience)

.top-advantages__item--personal
    &:before
      top -16px
      left -14px
      sprite($s-personal)

.top-advantages__item--guarantee
    &:before
      top -14px
      left 2px
      sprite($s-contract)

.top-advantages__item--term
    &:before
      top -8px
      left 36px
      sprite($s-clock)

.main-banner
  overflow hidden

.main-banner-slider
  float right
  width 70%
  .js-main-slider
    margin 0
    padding 0
    li
      list-style none
  .main-banner-slider__prev, .main-banner-slider__next
    &:after
      position absolute
      content ''
      right 0px
      top 6px
  .main-banner-slider__prev
    &:after
      sprite($s-arrow-left)
  .main-banner-slider__next
    &:after
      sprite($s-arrow-right)

.js-main-slider__one-slide
  h3
    position absolute
    display block
