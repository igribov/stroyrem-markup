@import "../main"
@import "../includes/_navigation"
@import "../includes/_feedback_form"

.top-advantages
    text-align center
    margin-bottom 20px
    border 2px solid redColor
    padding 25px 0

.top-advantages__item
    position relative
    display inline-block
    width 20%
    margin 0 2%
    left 0
    top 0
    &:before
        content ''
        position absolute
        display block
        sprite($s-expirience)
    span
        font-family bebasBold
        font-size 1.1rem

.top-advantages__item--experience
    &:before
      top -15px
      left 20px
      sprite($s-expirience)

.top-advantages__item--personal
    &:before
      top -16px
      left -14px
      sprite($s-personal)

.top-advantages__item--guarantee
    &:before
      top -14px
      left 2px
      sprite($s-contract)

.top-advantages__item--term
    &:before
      top -8px
      left 36px
      sprite($s-clock)

.main-banner
  overflow hidden

.main-banner-slider
  position relative
  float right
  width 70%
  .js-main-slider
    margin 0
    padding 0
    img
      width 100%
      height 305px
.main-banner-slider__prev, .main-banner-slider__next
  position absolute
  display block
  cursor pointer
  top 50%
  margin-top -24px
  z-index 10
.main-banner-slider__prev
  sprite($s-arrow-left)
  left 0
.main-banner-slider__next
  right 0
  sprite($s-arrow-right)

.js-main-slider__text
  position absolute
  max-width 700px
  margin-top 160px
  margin-left 50px
  p
    display block
    line-height 20px

.js-main-slider__title
  display block
  font-family bebasBold
  font-size 2rem
  color redColor



